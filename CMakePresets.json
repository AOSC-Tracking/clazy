{
    "version": 2,
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "dev",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-dev",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CLAZY_MAN_PAGE" : "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS" : "ON"
            }
        },
        {
            "name": "profile",
            "displayName": "profile",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-profile",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_UNITY_BUILD" : "ON",
                "CLAZY_MAN_PAGE" : "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS" : "ON"
            }
        },
        {
            "name": "release",
            "displayName": "release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_UNITY_BUILD" : "ON",
                "CLAZY_MAN_PAGE" : "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS" : "ON"
            }
        },
        {
            "name": "ubuntu-18.04",
            "displayName": "ubuntu-18.04",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-ubuntu-18.04",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_UNITY_BUILD" : "ON"
            },
            "environment" : {
                "PATH" : "/usr/lib/llvm-8/bin/:$penv{PATH}",
                "LD_LIBRARY_PATH" : "/usr/lib/llvm-8/lib64/:$penv{LD_LIBRARY_PATH}"
            }
        }
    ]
}
